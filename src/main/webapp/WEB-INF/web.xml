<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>first app</display-name>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.tomcat.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>by.itacademy.jd2.tomcat.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>by.itacademy.jd2.tomcat.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>filter</filter-name>
        <filter-class>by.itacademy.jd2.tomcat.NameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>HelloServlet</servlet-name>
    </filter-mapping>
</web-app>
